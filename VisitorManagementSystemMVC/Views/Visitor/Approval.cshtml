@model IEnumerable<VisitorManagementSystemMVC.Models.Visitor>


<h4 class="text-center text-uppercase">List of Pending Visitors</h4>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr style="background-color:#b3d9ff">
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.VisitedDate)</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var visitor in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@visitor.ProfilePicture"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />
                        @visitor.Name
                    </td>
                    <td>@visitor.PhoneNumber</td>
                    <td>@visitor.Email</td>
                    <td>@visitor.VisitedDate</td>
                    <td>
                        <a asp-action="GetApprove" asp-route-id="@visitor.Id" class="btn btn-success btn-sm text-white">Approve</a>
                        <a asp-action="GetReject" asp-route-id="@visitor.Id" class="btn btn-danger btn-sm text-white">Reject</a>

                    </td>

                </tr>

            }
        </tbody>
    </table>
}
            else
            {
    <hr />
                <center><p>No data found</p></center>
            }








    @section Scripts{

        <script type="text/javascript">

        </script>
    }
